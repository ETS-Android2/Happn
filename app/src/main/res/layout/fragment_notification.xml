<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">

    <TextView
        android:id="@+id/tvyouractivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Your Activity"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="@drawable/ic_rectangle_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvyouractivity" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/medal"
        app:layout_constraintEnd_toEndOf="@id/top"
        app:layout_constraintTop_toTopOf="@id/top" />

    <TextView
        android:id="@+id/tvaccessible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Accessible Soon \n \n\n\ your Shortlist"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@id/top"
        app:layout_constraintTop_toTopOf="@id/top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="To access your shorlist, keep Liking the profiles that  \nintrest you!"
        app:layout_constraintStart_toStartOf="@id/top"
        app:layout_constraintTop_toBottomOf="@id/tvaccessible" />


    <TextView
        android:id="@+id/tvNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Notifications"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivbellnotify"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_rawRes="@raw/notificationheart"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Notification will Apper Here"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:id="@+id/tvapper"
        app:layout_constraintTop_toBottomOf="@id/ivbellnotify"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvapper"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:text="In the meantime, Keep Liking the profiles that \n
        catch your eye, Remember: no Like, no Crush!"/>


</androidx.constraintlayout.widget.ConstraintLayout>