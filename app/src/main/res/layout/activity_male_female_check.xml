<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Quiz.MaleFemaleCheck">

    <TextView
        android:id="@+id/TextPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/cantora_one"
        android:gravity="center"
        android:text="Who would you like to cross paths with?"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/BtnMaleSvg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="@dimen/dp_40"
                android:background="@drawable/ic_male"
                android:text="Male" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/BtnMaleSvg"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:checked="false"
                android:fontFamily="@font/cantora_one"
                android:text="Male"
                android:textSize="20sp"
                android:thumb="@drawable/thumb"
                app:switchPadding="15dp"
                app:thumbTint="@color/black"
                app:track="@drawable/track" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnFemale"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="@dimen/dp_40"
                android:background="@drawable/ic_female"
                android:text="Female" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnFemale"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:checked="false"
                android:fontFamily="@font/cantora_one"
                android:text="Female"
                android:textSize="20sp"
                android:thumb="@drawable/thumb"
                app:switchPadding="15dp"
                app:thumbTint="@color/black"
                app:track="@drawable/track" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/discription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:text="By clicking CONTINUE ,you expressly give your consent to the  processing of this data, So we can present you with profiles matching your prefenence."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/BtnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@drawable/btncolor"
        android:fontFamily="@font/cantora_one"
        android:text="Continue"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>