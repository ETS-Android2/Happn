<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Quiz.QuizIntro">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/love"
        android:layout_width="wrap_content"
        android:layout_height="120dp"

        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loveandkiss" />

    <ImageView
        android:id="@+id/cakeEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="74dp"
        android:outlineAmbientShadowColor="#FFA500"
        android:outlineSpotShadowColor="#FFA500"
        android:rotationX="1"
        android:rotationY="33"
        android:src="@drawable/ca"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/IvuserImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/subh"
        android:layout_marginTop="30dp"
        android:layout_below="@id/cakeEmoji"/>

    <TextView
        android:id="@+id/TvUserGreetingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now, let's perfect that profile of yours!"
        android:layout_below="@+id/IvuserImage"
        android:textSize="33dp"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/IvBasketBall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ballll"
        android:rotationY="12"
        android:rotationX="34"
        android:layout_below="@id/TvUserGreetingText"/>

    <ImageView
        android:id="@+id/partypol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parrrty"
        android:layout_below="@+id/IvBasketBall"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


    <Button
        android:id="@+id/BtnLetsGO"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TvUserGreetingText"
        android:text="Lets Go!"
        android:textColor="@color/black"
        android:background="@drawable/ic_rectangle_8"
        android:textSize="23dp"

        android:layout_marginTop="@dimen/dp_50"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>